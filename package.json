{
  "name": "apuracao",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:client": "vite",
    "lint": "vue-cli-service lint",
    "electron:build": "electron-vite build",
    "electron:dev": "electron-vite dev",
    "postuninstall": "electron-builder install-app-deps",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "init": "knex init",
    "seed:sections": "bun run src/db/seeds/section.seed.ts",
    "migrate": "knex migrate:latest",
    "dev:server": "nodemon src/index.ts",
    "start": "npm run build && node dist/index.js",
    "build": "npm run build:server && npm run build:client",
    "build:client": "vite build",
    "build:server": "babel src --out-dir dist --config-file ./babel.server.config.js",
    "build:desktop:win": "bun run electron:build && electron-builder --win --config",
    "format": "prettier --write ."
  },
  "main": "src/vue/background.js",
  "type": "module",
  "dependencies": {
    "@formkit/vue": "^1.6.7",
    "@heroicons/vue": "^2.1.5",
    "@libsql/client": "^0.14.0",
    "axios": "^0.21.0",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.6",
    "drizzle-orm": "^0.33.0",
    "express": "^4.17.1",
    "jsonfile": "^6.1.0",
    "nedb": "^1.8.0",
    "notivue": "^2.4.5",
    "pinia": "^2.2.2",
    "puppeteer": "^5.5.0",
    "sqlite3": "5.1.6",
    "uuid": "^10.0.0",
    "vue": "^3.5.0",
    "vue-router": "^4.4.5",
    "vue3-easy-data-table": "^1.5.47",
    "vue3-spinners": "^1.2.2",
    "ws": "^7.4.0",
    "xlsx": "^0.16.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/node": "^22.5.5",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitejs/plugin-vue-jsx": "^4.0.1",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-service": "~5.0.8",
    "@vue/compiler-sfc": "^3.5.0",
    "autoprefixer": "^10.4.20",
    "bun-types": "^1.1.29",
    "concurrently": "^5.3.0",
    "drizzle-kit": "^0.24.2",
