    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^9.28.0",
    "nodemon": "^2.0.6",
    "postcss": "^8.4.47",
    "prettier": "2.4.1",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "vite": "^5.4.7",
    "vite-plugin-vue-devtools": "^7.4.6"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
